@model IEnumerable<Product>
@{
    ViewData["Title"] = "Products!!!";
}

<div class="container p-3">
    <div class="col-6">
        <h2 class="text-primary">
            List of Products:
        </h2>
    </div>

    <div class="col-6">
        <a asp-controller="Product" asp-action="CreateProduct">create new Product</a>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Category</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.Price.ToString("c")</td>
                    <td>@obj.categories.Name</td>
                    <td>
                        <a asp-controller="Product" asp-action="CreateProduct" asp-route-Id="@obj.id" class="btn btn-group btn-primary">
                            Edit
                        </a>
                        <a asp-controller="Product" asp-action="DeleteProduct" asp-route-Id="@obj.id" class="btn btn-group btn-danger">
                            Delete
                        </a>
                    </td>
                </tr>    
            }
        </tbody>
    </table>
} else {
    <div class="text-center"> No find Proguct in DB! </div>
}

