@model LearnRocky.Models.Category
@{
    ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit">
    <div class="border p-3">
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <h2 class="text-info p1-3">   Edit Category: </h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId">ID: </label>
                    </div>
                    <div class="col-8">
                        <input readonly asp-for="CategoryId" class="form-control"/>
                        <span class="text-danger" asp-validation-for="CategoryId"></span>
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name">enter Category name</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control"/>
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryLevel">enter Order in Show list</label>
                    </div>
                    <div class="col-8">
                        <input asp-for="CategoryLevel" class="form-control"/>
                        <span class="text-danger" asp-validation-for="CategoryLevel"></span>
                    </div>
                    
                </div>

                <div class="form-group row">
                    <div class="col-4 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Update"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ <partial name="_ValidationScriptsPartial" />}
}
