@model IEnumerable<Category>
@{
    ViewData["Title"] = "Categories!!!";
}

<div class="container p-3">
    <div class="col-6">
        <h2 class="text-primary">
            List of Categories:
        </h2>
    </div>

    <div class="col-6">
        <a asp-controller="Category" asp-action="Create">create new category</a>
    </div>
</div>

@if (Model.Count() > 0)
{
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.CategoryLevel</td>
                    <td>
                        <a asp-controller="Category" asp-action="Edit" asp-route-Id="@obj.CategoryId" class="btn btn-group btn-primary">
                            Edit
                        </a>
                        <a asp-controller="Category" asp-action="Delete" asp-route-Id="@obj.CategoryId" class="btn btn-group btn-danger">
                            Delete
                        </a>
                    </td>
                </tr>    
            }
        </tbody>
    </table>
}

