@model LearnRocky.Models.Product

<div class="col-lg-4 col-md-6 pb-4 filter @Model.categories.Name.Replace(' ', '_')">
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row">
            <div class="col-7"><label class="float-right"> @Model.Name </label></div>
            <div class="col-5"><label class="float-right"> @Model.Price.ToString("c") </label></div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb3 w-75 h-75" src="@WebConst.imagePath/@Model.imageUrl"/>
        <div class="card-body p-1 px-3 row">
            <div class="col-6">
                <span class="text-dark badge p-2 border w-100"> @Model.categories.Name </span>
            </div>
        </div>
        <div class="card-body p-1 px-3 row">
            <div class="col-12 pt-2" style="font-size:13px; text-align:justify">
                <label class="text-dark badge p-2" w-100> @Html.Raw(Model.Description) </label>
            </div>
            
            <div class="col-12 p-1">
                <a asp-action="AddToCart" asp-route-id="@Model.id" class="btn btn-dark form-control btn-sm pt-2"> Add to Cart </a>
            </div>
        </div>

    </div>

</div>


