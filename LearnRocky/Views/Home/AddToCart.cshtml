@model LearnRocky.Models.ViewModels.AddCartModel

@{
    ViewData["Title"] = "Add to Cart";
}

<form method="post" asp-controller="Home" asp-action="AddToCart">
    <div class="border p-3">
        <input asp-for="product.id" hidden/>
        <div class="text-danger" asp-validation-summary="ModelOnly"></div>
        <div class="form-group row">
            <h2 class="text-info p1-3">  Add Product @Model.product.Name to Cart: </h2>
        </div>

        <div class="row">
            <div class="col-4 pt-4">
                @if (Model != null)
                {
                    <img src="\@WebConst.imagePath\@Model.product.imageUrl" heigt="70%" width="70%" style="border-radius:5px border:1px solid #bbb"></img>
                }
            </div>

            <div>
                <input class="form-control" readonly asp-for="@Model.inCart"></input>
            </div>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row g-2 my-2">
                    <div class="col-8">
                        <input asp-for="product.Name" readonly class="form-control"/>
                    </div>
                </div>

                <div class="form-group row g-2 my-2">
                    <div class="col-8">
                        <input asp-for="product.Price" readonly class="form-control"/>
                    </div>                    
                </div>

                <div class="form-group row g-2 my-2">
                    <div class="col-8">
                        <input asp-for="product.Description" readonly class="form-control"/>
                    </div>                    
                </div>

                <div class="form-group row g-2 my-2">
                    <div class="col-8">
                        <input asp-for="quantity" class="form-control"/>
                        <span class="text-danger" asp-validation-for="quantity"></span>
                    </div>                    
                </div>

                <div class="form-group row g-2 my-2">
                    <div class="col-4 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-success w-100" value="Add"/>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-info w-100">Back</a>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </input>
</form>

@section Scripts {
    @{ <partial name="_ValidationScriptsPartial" />}
}   
